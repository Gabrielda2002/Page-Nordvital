//Pdfs 2021
import pdf10 from "@/pdf/2021/NOTAS-A-LOS-ESTADOS-FINANCIEROS-2021-NORDVITAL-IPS-SAS-2.pdf";
import pdf11 from "@/pdf/2021/CERTIFICACIÓN-DE-ESTADOS-FINANCIEROS-2021-1.pdf";
import pdf12 from "@/pdf/2021/DICTAMEN-REVISOR-FISCAL-Nordvital-2021-1.pdf";
