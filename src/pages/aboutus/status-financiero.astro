---

<Layout title="Estado Financiero">
  <head>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
  </head>

  <main class="overflow-x-hidden">
    <HeroSection title="Estado Financiero" backgroundImage={img} />

    <section class="estados__container container mx-auto px-4 py-8">
      <div class="grid gap-8 lg:grid-cols-2 xl:grid-cols-2 max-w-5xl mx-auto">
        <!-- Sección 2023 -->
        <section class="estados__item bg-white p-6 rounded-lg shadow-lg">
          <nav class="nav__estado">
            <h1 class="text-3xl font-semibold text-gray-700 mb-4">2023</h1>
            <ul class="space-y-3">
              <li>
                <a
                  href={pdf}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-500 hover:text-blue-700"
                  >Estado de situación financiera.</a
                >
              </li>
              <li>
                <a
                  href={pdf2}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-500 hover:text-blue-700"
                  >Certificado de los estados financieros.</a
                >
              </li>
              <li>
                <a
                  href={pdf3}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-500 hover:text-blue-700"
                  >Estados de ganancias y pérdidas.</a
                >
              </li>
              <li>
                <a
                  href={pdf4}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-500 hover:text-blue-700"
                  >Dictamen del revisor fiscal.</a
                >
              </li>
            </ul>
          </nav>
        </section>

        <!-- Sección 2022 -->
