              ]}
            />
            <Card
              title="SEDES 04:"
              address="Calle 15 # 2E-07"
              mapLink="https://www.google.com/maps/dir/7.8830885,-72.4954423//@7.8830827,-72.4955055,70m/data=!3m1!1e3?entry=ttu"
              images={[
                "/src/images/Sedes/Cucuta/Sede 3/SEDE-3-1.webp",
                "/src/images/Sedes/Cucuta/Sede 3/SEDE-3-2.webp",
                "/src/images/Sedes/Cucuta/Sede 3/SEDE-3-3.webp",
