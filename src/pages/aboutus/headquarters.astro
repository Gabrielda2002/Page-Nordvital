import S12Img2 from "@/images/Sedes/Amazonas/Leticia/SEDE-1-2.webp?url";
import S12Img3 from "@/images/Sedes/Amazonas/Leticia/SEDE-1-3.webp?url";
---

<Layout title="Nuestras Sedes">
  <body>
    <main class="bg-gray-100">
      <BreadCrumps title="Nuestras sedes" backgroundImage={img} />

      <div class="pt-5 pb-5">
        <div class="w-3/4 mx-auto mt-4 bg-transparent border-none">
          <div class="mb-10 font-bold text-lg">
            <!-- Pestañas de municipios -->
            <ul class="flex justify-evenly border-transparent" role="tablist">
              <li class="">
                <button
                  id="cucuta-tab"
                  class="p-4 text-black font-semibold border-b-0 hover:bg-sky-100 rounded-3xl tab-button active"
                  data-tab="cucuta"
                >
                  Cúcuta
                </button>
              </li>
              <li class="nav-item">
                <button
                  id="cundinamarca-tab"
                  class="p-4 text-black font-semibold border-b-0 hover:bg-sky-100 rounded-3xl tab-button"
                  data-tab="cundinamarca"
                >
                  Cundinamarca
                </button>
              </li>
              <li class="nav-item">
                <button
                  id="leticia-tab"
                  class="p-4 text-black font-semibold border-b-0 hover:bg-sky-100 rounded-3xl tab-button"
                  data-tab="leticia"
                >
                  Leticia
                </button>
              </li>
            </ul>
          </div>
          <div id="cucuta-content" class="tab-panel active">
            <!-- SEDES CUCUTA -->
            <Card
              title="SEDES 01:"
              address="Calle 14A # 2E-85"
              mapLink="https://www.google.com/maps..."
              images={[
                `${S01img1}`,
                `${S01img2}`,
                `${S01img3}`,
              ]}
            />
            <Card
              title="SEDES 03:"
              address="Calle 13A # 1E-52"
              mapLink="https://www.google.com/maps/place/Cl.+13a+%231e27,+Los+Caobos,+C%C3%BAcuta,+Norte+de+Santander/@7.8839631,-72.4978305,205m/data=!3m1!1e3!4m6!3m5!1s0x8e66459f7c41e3e3:0x5771d8ad71bd1a1a!8m2!3d7.8842913!4d-72.497095!16s%2Fg%2F11vxxw818w?entry=ttu"
              images={[
                `${S03Img1}`,
                `${S03Img2}`,
                `${S03Img3}`,
              ]}
            />
            <Card
              title="SEDES 04:"
              address="Calle 15 # 2E-07"
              mapLink="https://www.google.com/maps/dir/7.8830885,-72.4954423//@7.8830827,-72.4955055,70m/data=!3m1!1e3?entry=ttu"
              images={[
                `${S04Img1}`,
                `${S04Img2}`,
                `${S04Img3}`,
              ]}
            />
            <Card
              title="SEDES 05:"
              address="AV. 3A E # 13A-82 CAOBOS"
              mapLink="https://maps.app.goo.gl/qeYXCAhAt7Kihwps8"
              images={[
                `${S05Img1}`,
                `${S05Img2}`,
                `${S05Img3}`,
              ]}
            />
            <Card
              title="SEDES 06:"
              address="SEDE AV2 ESTE # 14A-10 CAOBOS"
              mapLink="https://maps.app.goo.gl/MsU4raTfftwrrgff7"
              images={[
                `${S06Img1}`,
                `${S06Img2}`,
                `${S06Img3}`,
              ]}
            />
            <Card
              title="SEDES 07:"
              address="CALLE 8 # 0-71 BARRIO LATINO"
              mapLink="https://maps.app.goo.gl/MsU4raTfftwrrgff7"
              images={[
                `${S07Img1}`,
                `${S07Img2}`,
                `${S07Img3}`,
              ]}
            />
          </div>

          <!-- SEDES CUNDINAMARCA -->
          <div id="cundinamarca-content" class="tab-panel">
            <Card
              title="Sede Ubaté:"
              address="CALLE 11 # 5-20 JUAN JOSE NEIRA"
              mapLink="https://maps.app.goo.gl/CL68fh6z9HDBARhu8"
              images={[
                `${S08Img1}`,
                `${S08Img2}`,
                `${S08Img3}`,
              ]}
            />
            <Card
              title="Sede La Mesa:"
              address="CALLE 8 # 24-67 ALVAREZ DIAZ"
              mapLink="https://maps.app.goo.gl/Bntm8wxFXDekCtgK8"
              images={[
                `${S09Img1}`,
                `${S09Img2}`,
                `${S09Img3}`,
              ]}
            />
            <Card
              title="Sede Cajíca:"
              address="CARRERA 7 # 2-46"
              mapLink="https://maps.app.goo.gl/fVRix63tKta678LR6"
              images={[
                `${S10Img1}`,
                `${S10Img2}`,
                `${S10Img3}`,
              ]}
            />
            <Card
              title="Sede La Calera:"
              address="CARRERA 5 # 2A-69"
              mapLink="https://maps.app.goo.gl/rbHQBipQYNMjoyBD9"
              images={[
                `${S11Img1}`,
                `${S11Img2}`,
                `${S11Img3}`,
              ]}
            />
          </div>
          
          <!-- SEDES LETICIA -->
          <div id="leticia-content" class="tab-panel">
            <Card
            title="Sede leticia:"
            address="CALLE 12 # 8-55 JOSE MARIA HERNANDEZ"
            mapLink="https://maps.app.goo.gl/U7VrqXBMe2aWVfwg9"
            images={[
              `${S12Img1}`,
              `${S12Img2}`,
              `${S12Img3}`,
              ]}
            />
          </div>
        </div>
      </div>
    </main>
    <Chat />

    <style>
      .tab-panel {
        display: none;
      }
      .tab-panel.active {
        display: block;
      }
      .tab-button.active {
        @apply bg-sky-500 text-white;
      }
    </style>

    <script>
      // Get all tab buttons and panels
      const tabButtons = document.querySelectorAll(".tab-button");
      const tabPanels = document.querySelectorAll(".tab-panel");

      // Add click event listeners to all tab buttons
      tabButtons.forEach((button) => {
        button.addEventListener("click", () => {
          // Remove active class from all buttons and panels
          tabButtons.forEach((btn) => btn.classList.remove("active"));
          tabPanels.forEach((panel) => panel.classList.remove("active"));

          // Add active class to clicked button
          button.classList.add("active");

          // Show corresponding panel
          const tabId = button.getAttribute("data-tab");
          const panel = document.getElementById(`${tabId}-content`);
          if (panel) {
            panel.classList.add("active");
          }
        });
      });
    </script>
  </body>
</Layout>
