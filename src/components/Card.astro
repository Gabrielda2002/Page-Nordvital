---
interface CardProps {
  title: string;
  address: string;
  mapLink: string;
  images: ImageMetadata[];
}
import { Image } from "astro:assets";
import { Map, MapControls } from "./ui/map";

const props = Astro.props as CardProps;
const { title = "", address = "", mapLink = "", images = [] } = props;
---

<article class="w-full max-w-6xl mx-auto px-4 py-6">
  <div
    class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300"
  >
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
      <!-- Sección de imágenes -->
      <div class="relative h-64 sm:h-80 lg:h-full min-h-100">
        <Image
          src={images[0]}
          class="absolute inset-0 w-full h-full object-cover"
          alt={`Imagen principal de ${title}`}
          widths={[400, 640, 768, 1024, 1280]}
          sizes="(max-width: 1024px) 100vw, 50vw"
        />
        <!-- Galería de miniaturas -->
        {
          images.length > 1 && (
            <div class="absolute bottom-3 left-3 right-3 flex gap-2">
              {images.slice(1, 3).map((image, index) => (
                <div class="flex-1 h-20 sm:h-24 rounded-lg overflow-hidden hover:shadow-md hover:shadow-primary  transition-shadow duration-300 ease-in-out backdrop-blur-sm bg-white/10">
                  <Image
                    src={image}
                    class="w-full h-full object-cover hover:scale-110  transition-transform ease-in-out duration-300"
                    alt={`Imagen ${index + 2} de ${title}`}
                    widths={[150, 200, 300]}
                    sizes="150px"
                  />
                </div>
              ))}
            </div>
          )
        }
      </div>

      <!-- Sección de información y mapa -->
      <div class="flex flex-col">
        <!-- Información de la sede -->
        <div class="p-6 sm:p-8 shrink-0">
          <div class="flex items-start gap-3 mb-4">
            <div
              class="shrink-0 w-10 h-10 bg-nordvital-primary/10 rounded-lg flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-nordvital-primary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3
                class="text-xl sm:text-2xl font-bold text-nordvital-teal-600 mb-2"
              >
                {title}
              </h3>
              <p
                class="text-gray-600 text-sm sm:text-base flex items-start gap-2"
              >
                <svg
                  class="w-5 h-5 shrink-0 mt-0.5 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>{address}</span>
              </p>
            </div>
          </div>
        </div>

        <!-- Mapa integrado -->
        <div class="flex-1 min-h-62.2 relative">
          <div class="h-full w-full">
            <!-- aqui va el mapa -->
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
