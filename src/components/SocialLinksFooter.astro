---
const socialLinks = [
  {
    href: "https://www.instagram.com/nordvital_ips/",
    src: "/src/assets/logo_footer/instagram.png",
    alt: "Instagram",
    text: "@IPS Nordvital",
  },
  {
    href: "https://www.facebook.com/Nordvitaloficial/?locale=es_LA",
    src: "/src/assets/logo_footer/facebook.png",
    alt: "Facebook",
    text: "@Nordvital1",
  },
  {
    href: "https://www.tiktok.com/@nordvital1",
    src: "/src/assets/logo_footer/tiktok.png",
    alt: "TikTok",
    text: "@nordvital1",
  },
  {
    href: "https://www.youtube.com/@NordvitalIPS",
    src: "/src/assets/logo_footer/youtube.png",
